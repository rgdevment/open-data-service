{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "countries": {
      "type": "application",
      "root": "apps/countries",
      "entryFile": "src/main",
      "sourceRoot": "apps/countries/src",
      "compilerOptions": {
        "tsConfigPath": "apps/countries/tsconfig.build.json",
        "assets": [
          {
            "include": "src/resources/**/*",
            "watchAssets": true
          }
        ]
      }
    },
    "indicators": {
      "type": "application",
      "root": "apps/indicators",
      "entryFile": "src/main",
      "sourceRoot": "apps/indicators/src",
      "compilerOptions": {
        "tsConfigPath": "apps/indicators/tsconfig.build.json",
        "assets": [
          {
            "include": "src/resources/**/*",
            "watchAssets": true
          }
        ]
      }
    },
    "neighborly": {
      "type": "application",
      "root": "apps/neighborly",
      "entryFile": "src/main",
      "sourceRoot": "apps/neighborly/src",
      "compilerOptions": {
        "tsConfigPath": "apps/neighborly/tsconfig.build.json",
        "assets": [
          {
            "include": "src/resources/**/*",
            "watchAssets": true
          }
        ]
      }
    }
  }
}
