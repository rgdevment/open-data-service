{
  "name": "open-data-services",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo for open source public data APIs.",
  "author": "rgdevment",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "nx run-many --target=serve",
    "lint": "nx run-many --target=lint",
    "lint:fix": "nx run-many --target=lint --fix",
    "format": "prettier --write \"{apps,libs,infrastructure,scripts}/**/*.{ts,js,json,md,yml,yaml}\"",
    "test": "nx run-many --target=test",
    "test:e2e": "nx run-many --target=test:e2e --projects=*-service",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches",
    "deps:dedupe": "pnpm dedupe",
    "deps:format": "sort-package-json"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@nx/eslint": "21.4.0",
    "@nx/jest": "21.4.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cache-manager": "4.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.17.2",
    "bcrypt": "^6.0.0",
    "cache-manager": "4.1.0",
    "cache-manager-redis-store": "2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "mysql2": "^3.14.3",
    "nx": "21.4.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.6.2",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "syncpack": "^13.0.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.26",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "pnpm lint:fix",
      "pnpm format"
    ],
    "*.json": [
      "pnpm format"
    ],
    "*.md": [
      "pnpm format"
    ]
  },
  "volta": {
    "node": "22.18.0",
    "npm": "11.5.2",
    "pnpm": "10.14.0"
  },
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=10.14.0"
  },
  "packageManager": "pnpm@10.14.0"
}
