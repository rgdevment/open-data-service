{
  "name": "open-data-services",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo for open source public data APIs.",
  "author": "rgdevment",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.10.0"
  },
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "build": "pnpm exec tsc -p tsconfig.build.json && pnpm exec tsc-alias",
    "start": "pnpm -r run start",
    "start:dev": "pnpm -r run start:dev",
    "lint": "eslint \"{apps,libs}/**/*.{ts,js}\"",
    "lint:fix": "eslint \"{apps,libs}/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"{apps,libs,infrastructure,scripts}/**/*.{ts,js,json,md,yml,yaml}\"",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm -r --filter './apps/**' run test:e2e",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches",
    "deps:dedupe": "pnpm dedupe",
    "deps:format": "sort-package-json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "cache-manager": "4.1.0",
    "cache-manager-redis-store": "2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "mysql2": "^3.14.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@nestjs/cli": "^11.0.0",
    "@types/cache-manager": "4.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "only-allow": "^1.2.1",
    "prettier": "^3.4.2",
    "syncpack": "^13.0.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.31.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "pnpm lint:fix",
      "pnpm format"
    ],
    "*.json": [
      "pnpm format"
    ],
    "*.md": [
      "pnpm format"
    ]
  }
}
